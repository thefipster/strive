{
  "DetailedErrors": true,
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.OpenTelemetry"
    ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "OpenTelemetry"
      }
    ]
  },
  "Features": {
    "Queue": {
      "QueueCountLimit": 100,
      "QueueBatchSize": 10,
      "DatabasePath": "E:\\strive\\data\\db\\signal.db",
      "MaxDegreeOfParallelism": 8,
      "RateWindowSeconds": 5,
      "ProcessingDelayMs": 50,
      "UpdateDelayMs": 200,
      "DeleteAfterDays": 1
      
    },
    "Schedule":  {
      "HelloWorldIntervalSeconds": 5,
      "QueueCleanupIntervalSeconds": 60
    },
    "Index": {
      "DatabasePath": "E:\\strive\\data\\db\\index.db"
    },
    "Upload": {
      "Path": "E:\\strive\\data\\files\\uploads"
    },
    "Import": {
      "Path": "E:\\strive\\data\\files\\imports"
    },
    "Expand": {
      "Path": "E:\\strive\\data\\files\\expand"
    },
    "Assimilate": {
      "Path": "E:\\strive\\data\\files\\assimilate"
    }
  }
}
